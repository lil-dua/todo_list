<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewEditTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="Edit Task"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:textColorHint="@color/yellow_dark"
        android:textColor="@color/black"
        android:hint="Rename your task!"
        android:layout_margin="10dp"
        android:id="@+id/editTextRenameTask"
        android:layout_below="@id/textViewEditTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginBottom="20dp"
        android:id="@+id/btnConfirmTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextRenameTask"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="Confirm" />

    <Button
        android:layout_marginBottom="20dp"
        android:id="@+id/btnCancelEditTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextRenameTask"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/btnConfirmTask"
        android:text="Cancel" />
</RelativeLayout>